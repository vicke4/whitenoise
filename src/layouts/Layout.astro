---
import { ANALYTICS_SCRIPT, ANALYTICS_SITE_ID } from "astro:env/client";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="manifest" href="/manifest.json" />
		<meta name="theme-color" content="#020617" />
		<meta name="generator" content={Astro.generator} />
		<title>White Noise Now - Free Online Brown & White Noise Generator</title>
		<meta name="description" content="Free online brown noise and white noise generator for focus, sleep, and relaxation. Loop-free generative audio with intuitive gesture controls." />
		<meta property="og:image" content="https://whitenoise.now/social-preview.png" />
		<script is:inline>
			if ('serviceWorker' in navigator &&
				// ignoring service worker in dev environment
				!['localhost', '127.0.0.1'].includes(window.location.hostname)
			) {
				window.addEventListener('load', () => {
					navigator.serviceWorker.register('/sw.js').then(
						(registration) => {
							console.log('ServiceWorker registration successful');
						},
						(err) => {
							console.log('ServiceWorker registration failed: ', err);
						}
					);
				});
			}
		</script>

		{ANALYTICS_SCRIPT && ANALYTICS_SITE_ID && <script
			src={ANALYTICS_SCRIPT}
			data-site-id={ANALYTICS_SITE_ID}
			defer
		></script>}
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
